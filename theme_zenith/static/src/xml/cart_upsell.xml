<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="theme_zenith.CartUpsellModal">
        <div class="modal fade" id="zenith_cart_upsell" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="modal-body p-0">
                        <!-- Success Header -->
                        <div class="bg-success text-white p-4 d-flex align-items-center">
                            <i class="fa fa-check-circle fa-3x me-3"></i>
                            <div>
                                <h4 class="mb-0 fw-bold">¡Producto añadido!</h4>
                                <p class="mb-0 opacity-75">Tu carrito ha sido actualizado.</p>
                            </div>
                            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="p-4">
                            <!-- Added Product Info (optional/placeholder) -->
                            
                            <hr class="my-4 opacity-10"/>

                            <!-- Upsell Section -->
                            <div class="upsell-section">
                                <h6 class="fw-bold mb-3 text-uppercase letter-spacing-1">Te puede interesar...</h6>
                                <div class="row g-3">
                                    <t t-foreach="related_products" t-as="product" t-key="product.id">
                                        <div class="col-6 col-md-3">
                                            <div class="card h-100 border-0 shadow-sm text-center p-2">
                                                <a t-att-href="product.url">
                                                    <img t-att-src="product.image_url" class="img-fluid rounded mb-2" style="height: 120px; object-fit: cover;" alt="Product"/>
                                                </a>
                                                <h6 class="small fw-bold text-truncate mb-1" t-esc="product.name"/>
                                                <div class="small text-primary fw-bold" t-esc="product.price_formatted"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <!-- Footer Actions -->
                        <div class="p-4 bg-light border-top d-flex gap-3 justify-content-center">
                            <button type="button" class="btn btn-outline-secondary rounded-pill px-4 fw-bold" data-bs-dismiss="modal">
                                Continuar Comprando
                            </button>
                            <a href="/shop/cart" class="btn btn-primary rounded-pill px-4 fw-bold shadow-sm">
                                <i class="fa fa-shopping-cart me-2"></i> Ver Carrito
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
