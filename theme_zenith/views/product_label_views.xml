<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Label Form View -->
    <record id="zenith_product_label_view_form" model="ir.ui.view">
        <field name="name">zenith.product.label.form</field>
        <field name="model">zenith.product.label</field>
        <field name="arch" type="xml">
            <form string="Label">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="style"/>
                            <field name="position"/>
                        </group>
                        <group>
                            <field name="bg_color" widget="color"/>
                            <field name="text_color" widget="color"/>
                        </group>
                    </group>
                    <field name="preview_html" nolabel="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Label List View -->
    <record id="zenith_product_label_view_tree" model="ir.ui.view">
        <field name="name">zenith.product.label.tree</field>
        <field name="model">zenith.product.label</field>
        <field name="arch" type="xml">
            <list string="Labels" editable="bottom">
                <field name="name"/>
                <field name="style"/>
                <field name="bg_color" widget="color"/>
                <field name="text_color" widget="color"/>
                <field name="position"/>
            </list>
        </field>
    </record>

    <!-- Label Action -->
    <record id="zenith_product_label_action" model="ir.actions.act_window">
        <field name="name">Product Labels</field>
        <field name="res_model">zenith.product.label</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Add Label Menu to Website > eCommerce -->
    <menuitem id="menu_product_label" 
              name="Labels" 
              parent="website_sale.menu_catalog" 
              action="zenith_product_label_action" 
              sequence="25"/>

    <!-- Add Label field to Product Template Form -->
    <record id="product_template_form_view_label" model="ir.ui.view">
        <field name="name">product.template.form.label</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="public_categ_ids" position="after">
                <field name="label_ids" widget="many2many_tags" options="{'color_field': 'bg_color'}"/>
            </field>
        </field>
    </record>
</odoo>
