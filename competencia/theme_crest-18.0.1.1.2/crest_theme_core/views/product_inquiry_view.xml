<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <data>
        
        <record id="view_product_inquiry_form" model="ir.ui.view">
            <field name="name">product.inquiry.form</field>
            <field name="model">product.inquiry</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="product_id" readonly="1"/>
                            <field name="email" readonly="1"/>
                            <field name="phone" readonly="1"/> 
                            <field name="message" widget="html" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_product_inquiry_tree_bits" model="ir.ui.view">
            <field name="name">product.inquiry.list</field>
            <field name="model">product.inquiry</field>
            <field name="arch" type="xml">
                <list edit="true">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="product_id" readonly="1"/>
                    <field name="state"/>
                </list>
            </field>
        </record>
        
        <record id="action_product_inquiry_bits" model="ir.actions.act_window">
            <field name="name">Product Inquiry</field>
            <field name="res_model">product.inquiry</field>
            <field name="view_mode">list,form</field> 
            <field name="target">current</field>
        </record>
        <record id="view_product_inquiry_search_bits" model="ir.ui.view">
            <field name="name">product.inquiry.search</field>
            <field name="model">product.inquiry</field>
            <field name="arch" type="xml">
                <search string="Search Redirect"> 
                    <group string="Group By Product">
                        <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <menuitem id="menu_product_inquiry_bits" name="Product Inquiries" parent="website.menu_website_global_configuration" action="action_product_inquiry_bits"/>
    </data> 
</odoo>
