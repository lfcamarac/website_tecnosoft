<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_offers_bits_form_view_bits" model="ir.ui.view">
        <field name="name">product_offers_bits.form.view.bits</field>
        <field name="model">product.offers.bits</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group> 
                        <group>
                            <field name="name" required="1"/> 
                            <field name="offer_icon"/> 
                            <field name="offer_description" />
                        </group> 
                    </group>
                    <notebook>
                        <page string="Offer Body" name="offer_body">
                            <field name="offer_details" />
                        </page>
                        <page string="Product Ids" name="product_ids">
                            <field name="product_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="product_offers_bits_tree_view_bits" model="ir.ui.view">
        <field name="name">product_offers_bits.list.view.bits</field>
        <field name="model">product.offers.bits</field>
        <field name="arch" type="xml">
            <list>
                <!-- <field name="sequence"/> -->
                <field name="name"/> 
            </list>
        </field>
    </record>
    <record id="action_product_offers_bits" model="ir.actions.act_window">
        <field name="name">Product Offers</field>
        <field name="res_model">product.offers.bits</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field> 
    </record>
    <menuitem
        id="menu_product_offers_bits"
        action="action_product_offers_bits"
        name="Product Offers"
        parent="crest_theme_core.menu_terabits_customisation_bits"
        sequence="10"/>
</odoo>
