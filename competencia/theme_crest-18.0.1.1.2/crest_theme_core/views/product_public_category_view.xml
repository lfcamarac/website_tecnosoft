<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="product_public_category_form_view_inherit_bits" model="ir.ui.view">
            <field name="name">product.public.category.form.view.inherit.bits</field>
            <field name="model">product.public.category</field>
            <field name="inherit_id" ref="website_sale.product_public_category_form_view"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sequence']" position="after">
                    <field name="category_banner"  widget="image" class="oe_avatar" options="{'preview_image': 'category_banner'}"></field>
                </xpath>
            </field>
         </record>
    </data> 
</odoo>
