<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tecnosoft_comparison_drawer" inherit_id="website.layout">
        <xpath expr="//div[@id='wrapwrap']" position="before">
            <!-- Floating Comparison Drawer -->
            <div id="tecnosoft_compare_drawer" class="compare-drawer transition-all duration-500 d-none">
                <div class="compare-drawer-header d-flex align-items-center justify-content-between px-3 py-2">
                    <div class="d-flex align-items-center gap-2">
                        <i class="fa fa-columns text-primary"></i>
                        <h6 class="mb-0 fw-bold">Comparar Productos</h6>
                        <span class="badge rounded-pill bg-primary compare-count">0</span>
                    </div>
                    <div class="d-flex align-items-center gap-3">
                         <a href="/shop/compare" class="btn btn-primary btn-sm rounded-pill px-3">Comparar Ahora</a>
                         <button class="btn-close btn-close-white close-compare-drawer" aria-label="Close"></button>
                    </div>
                </div>
                <div class="compare-drawer-body p-3 d-flex gap-3 overflow-auto custom-scrollbar">
                    <!-- Dynamic Items will be injected here -->
                </div>
            </div>
            
            <!-- Theme Customizer Panel -->
            <t t-call="website_tecnosoft.tecnosoft_theme_customizer_panel"/>
        </xpath>
    </template>
</odoo>
