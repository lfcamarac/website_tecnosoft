<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tecnosoft_empty_cart_lottie" inherit_id="website_sale.cart_lines" name="Tecnosoft Empty Cart Animation">
        <!-- Replace the default empty cart alert -->
        <xpath expr="//div[hasclass('alert-info')]" position="replace">
            <div class="text-center py-5">
                <div class="d-flex justify-content-center mb-4">
                    <img src="/web_editor/shape/website_sale/happy.svg" style="width: 150px; opacity: 0.5;" alt="Empty Cart"/>
                </div>
                <!-- Animation Placeholder for future use -->
                <div class="alert alert-info d-none">Animation Placeholder</div>
                <h4 class="mt-4 fw-bold">Your cart is empty!</h4>
                <p class="text-muted mb-4">Looks like you haven't added any items yet.</p>
                <a href="/shop" class="btn btn-primary btn-lg rounded-pill px-5">Start Shopping</a>
            </div>
        </xpath>
    </template>
</odoo>
