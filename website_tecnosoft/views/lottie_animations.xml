<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tecnosoft_empty_cart_lottie" inherit_id="website_sale.cart_lines" name="Tecnosoft Empty Cart Animation">
        <!-- Replace the default empty cart alert -->
        <xpath expr="//div[hasclass('alert-info')]" position="replace">
            <div class="text-center py-5" t-if="not website_sale_order or not website_sale_order.website_order_line">
                <div class="d-flex justify-content-center mb-4">
                    <i class="fa fa-shopping-basket fa-5x text-muted opacity-25"></i>
                </div>
                <!-- Animation Placeholder for future use -->
                <div class="alert alert-info d-none">Animation Placeholder</div>
                <h4 class="mt-4 fw-bold text-dark">¡Tu carrito está vacío!</h4>
                <p class="text-muted mb-4">Parece que aún no has agregado productos.</p>
                <a href="/shop" class="btn btn-primary btn-lg rounded-pill px-5 fw-bold">Empezar a Comprar</a>
            </div>
        </xpath>
    </template>
</odoo>
