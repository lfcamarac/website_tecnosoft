<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Snippet Options -->
    <template id="tecnosoft_configurator_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-selector=".s_tecnosoft_configurator" data-js="TecnosoftConfiguratorOptions">
                <we-select string="Estilo Global" data-no-preview="true">
                    <we-button data-set-style="moderno">Moderno</we-button>
                    <we-button data-set-style="minimalista">Minimalista</we-button>
                    <we-button data-set-style="futurista">Futurista</we-button>
                    <we-button data-set-style="epico">Épico</we-button>
                    <we-button data-set-style="dinamico">Dinámico</we-button>
                </we-select>
                <we-colorpicker string="Color Primario" data-select-label="Color Primario" data-set-primary-color=""/>
            </div>
        </xpath>
    </template>

    <template id="zenith_header_selector_option" inherit_id="website.snippet_options">
        <xpath expr="//we-select[@data-variable='header-template']" position="inside">
            <we-button title="Zenith Header V1" 
                       data-name="header_zenith_v1_opt" 
                       data-customize-website-views="website_tecnosoft.header_zenith_v1" 
                       data-customize-website-variable="'header_zenith_v1'" 
                       data-img="/website_tecnosoft/static/description/tecnosoft_snippet_thumb.png"/>
        </xpath>
    </template>

    <template id="tecnosoft_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="tecnosoft_dynamic_options" data-selector=".s_tecnosoft_dynamic, .s_tecnosoft_tabs">
                <we-row string="Configuración">
                    <we-select string="Límite" data-attribute-name="limit" data-no-preview="true">
                        <we-button data-select-data-attribute="4">4 Productos</we-button>
                        <we-button data-select-data-attribute="8">8 Productos</we-button>
                        <we-button data-select-data-attribute="12">12 Productos</we-button>
                    </we-select>
                    <we-select string="Modo" data-attribute-name="mode" data-no-preview="true">
                        <we-button data-select-data-attribute="grid">Cuadrícula</we-button>
                        <we-button data-select-data-attribute="slider">Carrusel</we-button>
                    </we-select>
                    <we-checkbox string="Reproducción Automática" data-attribute-name="autoplay" data-no-preview="true" t-if="mode == 'slider'"/>
                    <we-checkbox string="Flechas" data-attribute-name="arrows" data-no-preview="true" t-if="mode == 'slider'"/>
                </we-row>
                <we-row string="Categorías (Tabs)" t-if="snippet_id == 's_tecnosoft_tabs'">
                    <!-- Simple category selection via IDs for now, as we don't have a complex record picker -->
                    <we-input string="IDs Categorías (coma)" data-attribute-name="tab_category_ids" data-no-preview="true" placeholder="e.g. 1, 5, 8"/>
                </we-row>
            </div>

            <!-- Hotspot Options -->
            <div data-js="tecnosoft_hotspot_options" data-selector=".tecnosoft_hotspot">
                <we-row string="Posición">
                    <we-range string="Horizontal (%)" data-attribute-name="pos_x" data-min="0" data-max="100" data-step="1"/>
                    <we-range string="Vertical (%)" data-attribute-name="pos_y" data-min="0" data-max="100" data-step="1"/>
                </we-row>
                <we-row string="Producto">
                    <we-input string="ID Producto" data-attribute-name="product_id" data-no-preview="true" placeholder="e.g. 10"/>
                </we-row>
            </div>

            <!-- Global Style Engine -->
            <div data-js="tecnosoft_style_options" data-selector="#wrapwrap">
                <we-row string="Estilo Zenith">
                    <we-select string="Tema" data-attribute-name="zenith_style" data-no-preview="true">
                        <we-button data-select-data-attribute="">Moderno (Default)</we-button>
                        <we-button data-select-data-attribute="zenith-style-minimalista">Minimalista</we-button>
                        <we-button data-select-data-attribute="zenith-style-futurista">Futurista</we-button>
                        <we-button data-select-data-attribute="zenith-style-epico">Épico</we-button>
                        <we-button data-select-data-attribute="zenith-style-dinamico">Dinámico</we-button>
                    </we-select>
                </we-row>
            </div>

            <!-- Header Variants -->
            <div data-js="tecnosoft_header_options" data-selector="header.tecnosoft-header-v1">
                <we-row string="Diseño Header">
                    <we-select string="Variante" data-attribute-name="header_variant" data-no-preview="true">
                        <we-button data-select-data-attribute="">Estándar</we-button>
                        <we-button data-select-data-attribute="header-variant-centered">Maestro Centrado</we-button>
                        <we-button data-select-data-attribute="header-variant-minimal">Minimalista Sticky</we-button>
                        <we-button data-select-data-attribute="header-variant-glass">Cristal Flotante</we-button>
                    </we-select>
                </we-row>
            </div>

            <!-- Timeline Options -->
            <div data-js="tecnosoft_timeline_options" data-selector="section.s_tecnosoft_timeline">
                <we-row string="Contenido">
                    <we-button data-add-item="true" data-no-preview="true" class="fa fa-plus"> Añadir Hito</we-button>
                </we-row>
            </div>

            <!-- Pricing Table Options -->
            <div data-js="tecnosoft_pricing_options" data-selector="section.s_tecnosoft_pricing">
                <we-row string="Contenido">
                    <we-button data-add-card="true" data-no-preview="true" class="fa fa-plus"> Añadir Plan</we-button>
                </we-row>
            </div>

            <!-- Pricing Card Sub-options -->
            <div data-js="tecnosoft_pricing_card_options" data-selector=".tecnosoft-pricing-card">
                <we-row string="Plan">
                    <we-checkbox string="Más Popular" data-toggle-popular="true" data-no-preview="true"/>
                    <we-button data-remove-card="true" data-no-preview="true" class="fa fa-trash text-danger"> Borrar</we-button>
                </we-row>
            </div>

            <!-- Timeline Item Sub-options -->
            <div data-js="tecnosoft_timeline_item_options" data-selector=".tecnosoft-timeline-item">
                <we-row string="Hito">
                    <we-button data-remove-item="true" data-no-preview="true" class="fa fa-trash text-danger"> Borrar</we-button>
                </we-row>
            </div>
        </xpath>
    </template>

    <!-- Snippet Template -->
    <template id="s_tecnosoft_dynamic" name="Tecnosoft Dynamic Products">
        <section class="s_tecnosoft_dynamic pt-5 pb-5" data-snippet-id="s_tecnosoft_dynamic" data-ui-config='{"limit": 4, "mode": "grid"}'>
            <div class="container text-center">
                <h2 class="fw-bold mb-4">Productos Destacados Tecnosoft</h2>
                <div class="tecnosoft_dynamic_container row g-4">
                    <!-- OWL/JS will render content here -->
                    <div class="col-12">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="s_tecnosoft_tabs" name="Tecnosoft Category Tabs">
        <section class="s_tecnosoft_tabs pt-5 pb-5" data-snippet-id="s_tecnosoft_tabs" data-ui-config='{"limit": 4, "mode": "grid", "tab_category_ids": ""}'>
            <div class="container">
                <div class="tecnosoft_tabs_header mb-4">
                    <!-- JS will render tabs here -->
                </div>
                <div class="tecnosoft_dynamic_container row g-4">
                    <!-- Products will be rendered here -->
                </div>
            </div>
        </section>
    </template>

    <!-- Store Locator Snippet -->
    <template id="s_tecnosoft_store_locator" name="Store Locator (Sedes)">
