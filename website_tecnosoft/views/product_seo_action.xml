<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_seo_ai" model="ir.ui.view">
        <field name="name">product.template.form.seo.ai</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_generate_seo_description" 
                        string="Generate AI SEO" 
                        type="object" 
                        class="oe_highlight" 
                        icon="fa-magic"
                        help="Generate SEO Title and Description using AI (Mock)"/>
            </xpath>
        </field>
    </record>
</odoo>
