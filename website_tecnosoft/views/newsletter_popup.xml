<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="tecnosoft_newsletter_popup" inherit_id="website.layout">
        <xpath expr="//div[@id='wrapwrap']" position="before">
            <div id="tecnosoft_exit_popup" class="exit-popup-overlay d-none">
                <div class="exit-popup-content animate__animated animate__zoomIn">
                    <button class="close-exit-popup">&amp;times;</button>
                    <div class="row g-0">
                        <div class="col-md-5 d-none d-md-block exit-popup-img" style="background-image: url('/web_editor/shape/website/motto.svg'); background-color: var(--o-color-primary); background-blend-mode: overlay;">
                             <div class="h-100 d-flex align-items-center justify-content-center p-4">
                                <div class="text-white text-center">
                                    <h2 class="fw-bold">-10%</h2>
                                    <p class="mb-0">En tu primera compra</p>
                                </div>
                             </div>
                        </div>
                        <div class="col-md-7 p-5 text-center d-flex flex-column justify-content-center">
                            <i class="fa fa-envelope-open-o fa-3x text-primary mb-3"></i>
                            <h3 class="fw-bold mb-2">¡No te vayas aún!</h3>
                            <p class="text-muted mb-4">Suscríbete a nuestro boletín y recibe ofertas exclusivas, lanzamientos y un 10% dto.</p>
                            
                            <form action="/website_mass_mailing/subscribe" method="post" class="js_subscribe" data-list-id="1">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="input-group mb-3">
                                    <input type="email" name="email" class="form-control rounded-pill-start border-primary" placeholder="tu@email.com" required="required"/>
                                    <button type="submit" class="btn btn-primary rounded-pill-end px-4">Unirme</button>
                                </div>
                                <div class="js_subscribe_email_error d-none text-danger small">Email inválido</div>
                                <div class="js_subscribe_success d-none text-success">¡Gracias por unirte!</div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
