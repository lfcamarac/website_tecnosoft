<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Quick Order Page -->
    <template id="tecnosoft_quick_order" name="Pedido Rápido B2B">
        <t t-call="website.layout">
            <div id="wrap" class="tecnosoft-quick-order-page bg-light-soft py-5">
                <div class="container">
                    <div class="row mb-5 align-items-end">
                        <div class="col-lg-8">
                            <h1 class="fw-bold text-dark display-5 mb-3">Pedido Rápido</h1>
                            <p class="text-muted lead mb-0">Añade múltiples productos a tu carrito de forma masiva ingresando los SKUs o nombres.</p>
                        </div>
                        <div class="col-lg-4 text-lg-end">
                            <span class="badge bg-primary rounded-pill px-3 py-2 fw-bold shadow-sm">B2B EXCLUSIVE</span>
                        </div>
                    </div>

                    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0" id="quick_order_table">
                                    <thead class="bg-dark text-white text-uppercase small letter-spacing-1">
                                        <tr>
                                            <th class="ps-4 py-3" style="width: 40%;">Producto / SKU</th>
                                            <th class="py-3 text-center" style="width: 15%;">Stock</th>
                                            <th class="py-3 text-center" style="width: 15%;">Precio</th>
                                            <th class="py-3 text-center" style="width: 15%;">Cantidad</th>
                                            <th class="pe-4 py-3 text-end" style="width: 15%;">Acción</th>
                                        </tr>
                                    </thead>
                                    <tbody id="quick_order_rows">
                                        <!-- Initial Empty Row -->
                                        <tr class="quick-order-row">
                                            <td class="ps-4 py-4">
                                                <div class="position-relative">
                                                    <input type="text" class="form-control border-0 bg-light rounded-3 js_quick_search" placeholder="Buscar por nombre o SKU..."/>
                                                    <div class="quick-search-results position-absolute w-100 mt-1 shadow-lg rounded-3 bg-white d-none" style="z-index: 1000;"></div>
                                                </div>
                                            </td>
                                            <td class="text-center text-muted">--</td>
                                            <td class="text-center fw-bold">--</td>
                                            <td class="text-center">
                                                <input type="number" class="form-control form-control-sm border-0 bg-light rounded-3 mx-auto text-center js_quick_qty" value="1" min="1" style="max-width: 80px;"/>
                                            </td>
                                            <td class="pe-4 text-end">
                                                <button class="btn btn-light rounded-circle btn-sm js_remove_row disabled"><i class="fa fa-times"></i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-white p-4 border-0 d-flex justify-content-between align-items-center">
                            <button class="btn btn-outline-secondary rounded-pill px-4 fw-bold" id="js_add_quick_row">
                                <i class="fa fa-plus me-2"></i> Añadir otra línea
                            </button>
                            <div class="d-flex gap-3 align-items-center">
                                <div class="text-end">
                                    <div class="small text-muted">Total Estimado</div>
                                    <div class="h4 fw-bold mb-0 text-primary" id="quick_order_total_display">0,00 €</div>
                                </div>
                                <button class="btn btn-primary btn-lg rounded-pill px-5 fw-bold shadow js_bulk_add_cart">
                                    <i class="fa fa-shopping-cart me-2"></i> AÑADIR TODO AL CARRITO
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <!-- CSV Import Helper (Future) -->
                    <div class="mt-4 text-center">
                        <p class="text-muted small">¿Tienes una lista grande? <a href="#" class="text-primary fw-bold text-decoration-none">Sube un archivo CSV</a></p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
