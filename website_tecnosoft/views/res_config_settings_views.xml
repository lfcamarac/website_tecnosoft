<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_tecnosoft" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.tecnosoft</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='web_master_settings']" position="after">
                <h2>Personalización Tecnosoft</h2>
                <div class="row mt16 o_settings_container" id="tecnosoft_theme_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="tecnosoft_primary_color"/>
                            <div class="text-muted">Color principal para botones, enlaces y acentos.</div>
                            <field name="tecnosoft_primary_color" widget="color"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="tecnosoft_secondary_color"/>
                            <div class="text-muted">Color secundario para elementos de apoyo.</div>
                            <field name="tecnosoft_secondary_color" widget="color"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="tecnosoft_body_font"/>
                            <div class="text-muted">Tipografía global del sitio.</div>
                            <field name="tecnosoft_body_font"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
