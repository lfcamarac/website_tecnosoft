<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dynamic Popup Template -->
    <template id="tecnosoft_dynamic_popup" inherit_id="website.layout" name="Tecnosoft Dynamic Popup">
        <xpath expr="//div[@id='wrapwrap']" position="inside">
            <div id="tecnosoft_popup" class="modal fade tecnosoft-premium-modal" tabindex="-1" role="dialog" data-bs-backdrop="static">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content border-0 shadow-lg overflow-hidden rounded-4">
                        <div class="row g-0">
                            <div class="col-md-5 d-none d-md-block bg-primary d-flex align-items-center justify-content-center p-4 text-white text-center">
                                <div>
                                    <i class="fa fa-gift fa-4x mb-3 animate-pulse"></i>
                                    <h3 class="fw-bold">¡Oferta Especial!</h3>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="modal-body p-4 p-lg-5">
                                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                                    <h4 class="fw-bold mb-3">Obtén un 10% de descuento</h4>
                                    <p class="text-muted mb-4">Suscríbete a nuestro boletín y recibe un código promocional exclusivo para tu primera compra.</p>
                                    <form action="/website/newsletter/subscribe" method="post" class="js_subscribe" data-list-id="1">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="mb-3">
                                            <input type="email" name="email" class="form-control rounded-pill px-3 py-2" placeholder="tu@email.com" required="required"/>
                                        </div>
                                        <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold">Suscribirme ahora</button>
                                    </form>
                                    <div class="mt-3 text-center">
                                        <a href="#" class="text-muted small" data-bs-dismiss="modal">No, gracias. Prefiero pagar el precio completo.</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
