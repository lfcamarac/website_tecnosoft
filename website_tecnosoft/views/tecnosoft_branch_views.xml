<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tecnosoft_branch_view_form" model="ir.ui.view">
        <field name="name">tecnosoft.branch.form</field>
        <field name="model">tecnosoft.branch</field>
        <field name="arch" type="xml">
            <form string="Sede">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Ej. Tienda Central"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="warehouse_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <field name="description" placeholder="DirecciÃ³n o notas para el cliente..."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tecnosoft_branch_view_tree" model="ir.ui.view">
        <field name="name">tecnosoft.branch.list</field>
        <field name="model">tecnosoft.branch</field>
        <field name="arch" type="xml">
            <list string="Sedes" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="warehouse_ids" widget="many2many_tags"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="tecnosoft_branch_action" model="ir.actions.act_window">
        <field name="name">Sedes (Stock)</field>
        <field name="res_model">tecnosoft.branch</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera Sede.
            </p>
            <p>
                Agrupa almacenes para mostrar el stock unificado en el sitio web e-commerce.
            </p>
        </field>
    </record>

    <!-- Menu Item under Website > Configuration -->
    <menuitem id="menu_tecnosoft_branch"
              parent="website.menu_website_global_configuration"
              action="tecnosoft_branch_action"
              sequence="150"/>
</odoo>
