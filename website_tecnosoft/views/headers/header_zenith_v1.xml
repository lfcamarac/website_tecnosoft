<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="header_zenith_v1" inherit_id="website.layout" name="Header Zenith V1" active="False">
        <xpath expr="//header//nav" position="replace">
            <t t-call="website.navbar">
                <t t-set="_navbar_classes" t-valuef="d-none d-lg-block p-0 shadow-sm z-index-1"/>
                
                <div id="o_main_nav" class="o_main_nav header_zenith_v1">
                    <!-- Top Bar -->
                    <div class="zenith-top-bar py-1 bg-dark text-white">
                        <div class="container d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-3">
                                <span class="small"><i class="fa fa-phone me-1"/> <t t-esc="res_company.phone"/></span>
                                <span class="small"><i class="fa fa-envelope me-1"/> <t t-esc="res_company.email"/></span>
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <!-- Language Selector -->
                                <t t-call="website.placeholder_header_language_selector">
                                    <t t-set="_div_classes" t-valuef="position-relative"/>
                                    <t t-set="_btn_class" t-valuef="btn btn-sm text-white dropdown-toggle p-0"/>
                                    <t t-set="_dropdown_menu_class" t-valuef="dropdown-menu-end"/>
                                </t>
                                <!-- Pricelist -->
                                <t t-call="website_sale.pricelist_list">
                                    <t t-set="_classes" t-valuef="text-white ms-2"/>
                                </t>
                            </div>
                        </div>
                    </div>

                    <!-- Main Header Area -->
                    <div class="zenith-main-header py-3 bg-white border-bottom">
                        <div class="container">
                            <div class="row align-items-center">
                                <!-- Logo -->
                                <div class="col-lg-2">
                                    <a href="/" class="navbar-brand logo m-0">
                                        <span t-field="website.logo_image" t-options="{'widget': 'image', 'qweb_img_responsive': False, 'class': 'img-fluid', 'style': 'max-height: 50px;'}"/>
                                        <span t-if="not website.logo_image" t-field="website.name" class="fw-bold fs-4 text-primary"/>
                                    </a>
                                </div>

                                <!-- Search Bar -->
                                <div class="col-lg-6">
                                    <t t-call="website.placeholder_header_search_box">
                                        <t t-set="_form_classes" t-valuef="w-100"/>
                                        <t t-set="_input_classes" t-valuef="form-control-lg border-primary rounded-pill bg-light"/>
                                        <t t-set="_submit_classes" t-valuef="btn btn-primary rounded-pill position-absolute end-0 top-0 bottom-0 m-1 px-4"/>
                                        <t t-set="_item_class" t-valuef="d-flex w-100 position-relative"/>
                                    </t>
                                </div>

                                <!-- Icons Area -->
                                <div class="col-lg-4">
                                    <ul class="nav justify-content-end align-items-center gap-3">
                                        <!-- Wishlist -->
                                        <t t-call="website_sale_wishlist.header_wishlist_link">
                                            <t t-set="_icon" t-value="True"/>
                                            <t t-set="_link_class" t-value="'btn btn-outline-light text-dark rounded-circle position-relative p-2'"/>
                                            <t t-set="_badge_class" t-value="'position-absolute top-0 end-0 translate-middle badge rounded-pill bg-danger'"/>
                                        </t>
                                        
                                        <!-- Compare -->
                                        <li class="nav-item example-compare" t-if="is_view_active('website_sale_comparison.add_to_compare')">
                                            <a href="/shop/compare" class="btn btn-outline-light text-dark rounded-circle position-relative p-2 o_product_compare">
                                                <i class="fa fa-exchange"/>
                                            </a>
                                        </li>

                                        <!-- Cart -->
                                        <t t-call="website_sale.header_cart_link">
                                            <t t-set="_icon" t-value="True"/>
                                            <t t-set="_link_class" t-value="'btn btn-outline-light text-dark rounded-circle position-relative p-2'"/>
                                            <t t-set="_badge_class" t-value="'position-absolute top-0 end-0 translate-middle badge rounded-pill bg-primary'"/>
                                        </t>

                                        <!-- User / Sign In -->
                                        <t t-call="portal.placeholder_user_sign_in">
                                            <t t-set="_link_class" t-valuef="btn btn-primary rounded-pill px-4 fw-bold"/>
                                        </t>
                                        <t t-call="portal.user_dropdown">
                                            <t t-set="_user_name" t-value="True"/>
                                            <t t-set="_item_class" t-valuef="dropdown"/>
                                            <t t-set="_link_class" t-valuef="nav-link fw-bold text-dark"/>
                                            <t t-set="_dropdown_menu_class" t-valuef="dropdown-menu-end shadow"/>
                                        </t>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Navigation Bar -->
                    <div class="zenith-navbar bg-white shadow-sm">
                        <div class="container">
                            <ul class="nav">
                                <!-- Shop By Category (Dropdown Placeholder) -->
                                <li class="nav-item dropdown me-3 border-end pe-3">
                                    <a class="nav-link dropdown-toggle text-dark fw-bold text-uppercase d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-bars"/> Categor√≠as
                                    </a>
                                    <ul class="dropdown-menu shadow-lg border-0 p-3" style="min-width: 250px;">
                                        <!-- Dynamic categories would go here -->
                                        <li><a class="dropdown-item py-2" href="/shop">Todo los Productos</a></li>
                                        <li><hr class="dropdown-divider"/></li>
                                        <t t-foreach="website.get_category_menu()" t-as="cat">
                                            <li><a class="dropdown-item py-2" t-att-href="cat['link']" t-esc="cat['name']"/></li>
                                        </t>
                                    </ul>
                                </li>

                                <!-- Standard Odoo Menu -->
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-valuef="nav-item"/>
                                        <t t-set="link_class" t-valuef="nav-link text-uppercase fw-bold text-secondary text-hover-primary"/>
                                    </t>
                                </t>
                            </ul>
                        </div>
                    </div>
                </div>
            </t>
            
            <!-- Mobile Header (Reuse Odoo's capable mobile header for V1 to ensure stability, custom later if needed) -->
            <t t-call="website.template_header_mobile">
                 <t t-set="_extra_navbar_classes" t-valuef="shadow-sm"/>
            </t>
        </xpath>
    </template>
</odoo>
