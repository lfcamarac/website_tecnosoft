<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="website_tecnosoft.DynamicProductList">
        <t t-foreach="products" t-as="product" t-key="product.id">
            <div class="col-lg-3 col-md-6">
                <div class="card h-100 border-0 shadow-sm hover-up">
                    <a t-att-href="product.url">
                        <img t-att-src="product.image_url" class="card-img-top p-3" loading="lazy" t-att-alt="product.name" style="object-fit: contain; height: 200px;"/>
                    </a>
                    <div class="card-body">
                        <h6 class="card-title fw-bold" t-esc="product.name"/>
                        <p class="text-primary fw-bold mb-0">
                            <span t-esc="product.price" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </t>
</templates>
